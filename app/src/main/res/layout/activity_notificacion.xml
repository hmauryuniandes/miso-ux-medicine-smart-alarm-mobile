<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotificacionActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/materialToolbar"
        android:layout_width="411dp"
        android:layout_height="67dp"
        android:background="@color/primary"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:text="@string/user_name"
        android:textColor="@color/onPrimary"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/materialToolbar"
        app:layout_constraintEnd_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.558" />

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="264dp"
        android:contentDescription="@string/notification"
        android:text="@string/notification"
        android:textColor="@color/onPrimary"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/materialToolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.457" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/users"
        app:layout_constraintBottom_toBottomOf="@+id/materialToolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.521"
        app:srcCompat="@drawable/user_logo" />

    <GridLayout
        android:id="@+id/weekGridLayout"
        android:layout_width="334dp"
        android:layout_height="195dp"
        android:layout_gravity="center"
        android:layout_marginStart="40dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/rounded_calendario"
        android:bottom="100dp"
        android:columnCount="7"
        android:padding="20dp"
        android:rowCount="6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="center_vertical"
            android:paddingLeft="12dp"

            android:text="@string/mes"
            android:textColor="@color/primary"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="center_vertical"
            android:src="@drawable/botonabajo" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="5"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="\u003C"
            android:textColor="@color/primary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="6"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="\u003E"
            android:textColor="@color/primary"
            android:textSize="18sp"
            android:textStyle="bold" />


        <!-- Domingo -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="S"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:textSize="18sp" />

        <!-- Lunes -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="M"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:textSize="18sp" />

        <!-- Martes -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="T"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:textSize="18sp" />

        <!-- Miércoles -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="W"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:textSize="18sp" />

        <!-- Jueves -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="T"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:textSize="18sp" />

        <!-- Viernes -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="F"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:textSize="18sp" />

        <!-- Sábado -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="S"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:textSize="18sp" />

        <!-- Días del mes -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="13"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="14"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="15"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="16"
            android:textColor="@color/black"
            android:textSize="18sp" />


        <TextView
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/fondo_circular"
            android:gravity="center"
            android:text="17"
            android:textColor="@color/white"
            android:textSize="18sp" />



        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="18"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="19"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnSpan="5"
            android:layout_columnWeight="1"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="@string/hoy"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />
    </GridLayout>

    <GridLayout
        android:id="@+id/notificacionGridLayout"
        android:layout_width="371dp"
        android:layout_height="96dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_notificacion"
        android:bottom="100dp"
        android:columnCount="3"
        android:padding="15dp"
        android:rowCount="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weekGridLayout"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_row="0"
            android:layout_column="0"
            android:contentDescription="@string/acetaminofen"
            android:gravity="center"
            android:paddingTop="8dp"
            android:text="@string/acetaminofen"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:layout_width="95dp"
            android:layout_height="81dp"
            android:layout_row="0"
            android:layout_rowSpan="2"
            android:layout_column="1"
            android:gravity="right"
            android:paddingTop="15dp"
            android:text="@string/hora"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_row="1"
            android:layout_column="0"
            android:paddingLeft="10dp"
            android:text="@string/tomar"
            android:textColor="@color/white80"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_row="0"
            android:layout_rowSpan="2"
            android:layout_column="2"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:src="@drawable/notificacion" />

    </GridLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_cerrar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/btnCerrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:backgroundTint="@color/secondary"
            android:paddingLeft="70dp"
            android:paddingRight="70dp"
            android:text="@string/cerrar"
            android:textColor="@color/white"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="124dp"
            tools:layout_editor_absoluteY="827dp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>